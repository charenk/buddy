# Figma AI Buddy - Environment Variables
# Copy this file to .env and fill in your values

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Figma Configuration
FIGMA_PAT=your_figma_personal_access_token_here
FIGMA_WEBHOOK_SECRET=your_webhook_secret_here

# Webhook Configuration (for comment-based AI responses)
WEBHOOK_URL=https://your-app.vercel.app/api/figma-comment-webhook

# Figma OAuth (for account-level webhook management)
FIGMA_CLIENT_ID=your_figma_client_id_here
FIGMA_CLIENT_SECRET=your_figma_client_secret_here
FIGMA_REDIRECT_URI=https://your-app.vercel.app/api/auth/figma-oauth

# Vercel Configuration (automatically set by Vercel)
VERCEL_URL=your_vercel_app_url_here

# Optional: File allowlist for security
ALLOWLIST_FILE_KEYS=comma_separated_file_keys_here
