# Only allow specific API functions
!api/auth.js
!api/user.js
!api/figma-plugin.js
!api/figma-comment-webhook.js

# Allow lib directory (needed by API functions)
!lib/

# Ignore all other JavaScript files that could be detected as functions
*.js
!api/*.js
!lib/*.js

# Ignore test files
test-*.js
*.test.js
setup-*.js

# Ignore documentation
*.md
docs/

# Ignore development files
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Ignore node_modules (should be handled by Vercel)
node_modules/

# Ignore Git files
.git/
.gitignore

# Ignore other development files
*.log
.DS_Store
